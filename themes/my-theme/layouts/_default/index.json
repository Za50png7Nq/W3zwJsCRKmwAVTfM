[
    {{- $first := true -}}
    {{- range .Site.RegularPages -}}
        {{- if not $first -}},{{- end -}}
        {{- $first = false -}}
        {
            "title": {{ .Title | jsonify }},
            "link": {{ .RelPermalink | jsonify }},
            "content": {{ .Plain | jsonify }},
            "tags": {{ .Params.tags | jsonify }},
            "categories": {{ .Params.categories | jsonify }}
        }
    {{- end -}}
]
